<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- CartÃµes do menu principal -->
    <style name="MenuCardStyle" parent="Widget.Material3.CardView.Outlined">
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/card_border</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:stateListAnimator">@null</item>
    </style>


    <style name="ActionCardButton" parent="Widget.Material3.Button">
        <item name="android:background">@color/card_bg_translucent</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <!-- Tema base do app -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/dark_bg</item>
        <item name="android:navigationBarColor">@color/dark_bg</item>
        <item name="android:windowBackground">@color/dark_bg</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

</resources>
