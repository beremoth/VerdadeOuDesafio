<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/crimson_glow"
                android:endColor="@color/fire_red"
                android:angle="270"/>
            <corners android:radius="10dp"/>
            <stroke android:width="2dp" android:color="@color/fire_red"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/metal_gray"
                android:endColor="@color/dark_bg"
                android:angle="270"/>
            <corners android:radius="10dp"/>
            <stroke android:width="2dp" android:color="@color/crimson_glow"/>
        </shape>
    </item>
</selector>
