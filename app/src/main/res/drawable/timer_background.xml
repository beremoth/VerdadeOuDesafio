<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado crítico (quando o tempo estiver acabando) -->
    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/black" /> <!-- Rosa forte para urgência -->
            <corners android:radius="15dp" />
            <stroke android:width="3dp" android:color="@color/fire_red" /> <!-- Borda vermelha de alerta -->
        </shape>
    </item>

    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80000000" /> <!-- Fundo preto semi-transparente -->
            <corners android:radius="20dp" /> <!-- Borda arredondada -->
            <stroke android:width="2dp" android:color="@color/fire_red" /> <!-- Borda vermelha -->
            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />
        </shape>
    </item>
</selector>
